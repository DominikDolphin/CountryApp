<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_countryName"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="42dp"
        android:text="Official Name"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_commonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_commonName"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="259dp"
        android:layout_height="81dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"

        android:layout_marginBottom="123dp"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_languages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_countryName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/view_commonName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"
        android:text="commonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/view_capitalCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_capitalCity"
        app:layout_constraintTop_toBottomOf="@+id/view_countryName" />

    <TextView
        android:id="@+id/view_capitalCity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="38dp"
        android:text="Capital"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/view_languages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_commonName" />

    <TextView
        android:id="@+id/view_placeholder_unMember"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:text="UN Member"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/favButton"
        app:layout_constraintEnd_toStartOf="@+id/view_unMember"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_independent"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_placeholder_symbol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="13dp"
        android:text="Symbol"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_independent"
        app:layout_constraintEnd_toStartOf="@+id/view_symbol"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_currency"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_placeholder_independent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:text="Independent"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_unMember"
        app:layout_constraintEnd_toStartOf="@+id/view_independent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_symbol"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_placeholder_continent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:text="Continent"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_subregion"
        app:layout_constraintEnd_toStartOf="@+id/view_continent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_languages"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_placeholder_subregion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="7dp"
        android:text="Subregion"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_population"
        app:layout_constraintEnd_toStartOf="@+id/view_subregion"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_continent"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_continent"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="amuricas"

        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_continent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_continent" />

    <TextView
        android:id="@+id/view_placeholder_currency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="1dp"
        android:text="Currency"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_symbol"
        app:layout_constraintEnd_toStartOf="@+id/view_currency"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_population"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_placeholder_population"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="11dp"
        android:text="Population"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_currency"
        app:layout_constraintEnd_toStartOf="@+id/view_population"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_subregion"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_languages"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:text="Engwish, fwench"
        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_languages"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_languages" />

    <TextView
        android:id="@+id/view_placeholder_languages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="9dp"
        android:text="Official Languages"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_placeholder_continent"
        app:layout_constraintEnd_toStartOf="@+id/view_languages"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/view_subregion"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="nawth murica"
        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_subregion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_subregion" />

    <TextView
        android:id="@+id/view_population"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="12345678"
        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_population"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_population"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/view_currency"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="CAD"
        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_currency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_currency" />

    <TextView
        android:id="@+id/view_symbol"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="$"

        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_symbol" />

    <TextView
        android:id="@+id/view_independent"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="yup"
        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_independent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_independent" />

    <TextView
        android:id="@+id/view_unMember"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:text="yuuup"
        android:textAlignment="viewStart"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_placeholder_unMember"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_placeholder_unMember" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="view_countryName,imageView2,view_commonName,view_capitalCity,view_placeholder_unMember,view_placeholder_symbol,view_placeholder_independent,view_placeholder_continent,view_placeholder_subregion,view_continent,view_placeholder_currency,view_placeholder_population,view_languages,view_placeholder_languages,view_subregion,view_population,view_currency,view_symbol,view_independent,view_unMember"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imageView2,view_capitalCity,view_commonName,view_countryName"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/favButton"
        android:layout_width="191dp"
        android:layout_height="64dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#E9C94D"
        android:text="Add to Favourites"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_placeholder_unMember" />


</androidx.constraintlayout.widget.ConstraintLayout>